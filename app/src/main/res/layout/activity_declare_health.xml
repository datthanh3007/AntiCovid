<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color2"
    android:orientation="vertical"
    android:padding="@dimen/dp_30"
    tools:context=".Activity.ActivityDeclaretion">
    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:text="Thông tin sức khoẻ"
        />
        <Button
            android:id="@+id/btnSupport"
            android:layout_marginStart="@dimen/dp_70"
            android:layout_width="@dimen/dp_70"
            android:layout_height="@dimen/dp_30"
            android:textStyle="normal"
            android:background="@drawable/custom_button_next"
            android:text="Hỗ trợ"/>
    </LinearLayout>
    <TextView
        android:layout_marginTop="@dimen/dp_62"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Ghi chú"/>
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:textColorHint="@color/colorBlackLight"
        android:layout_marginTop="@dimen/dp_8">
        <EditText
            android:id="@+id/edtkhaibao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nhập thông tin"
            android:ems="10"
            android:textColor="@color/colorBlack"
            android:inputType="text"
            android:textSize="@dimen/sp_18"/>
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="@color/colorBlack"
        android:text="Bạn có thấy xuất hiện dấu hiệu gì không ?"
        android:textSize="16sp"/>
    <LinearLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <CheckBox
            android:id="@+id/cbsot"
            android:background="@color/black_trans"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Sốt"
            android:layout_weight="1"
            android:theme="@style/checkbox"
            android:button="@drawable/img_checkbox"/>
        <CheckBox
            android:id="@+id/cbvienphoi"
            android:background="@color/black_trans"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:button="@drawable/img_checkbox"
            android:theme="@style/checkbox"
            android:text="Viêm Phổi"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <CheckBox
            android:id="@+id/cbho"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Ho"
            android:layout_weight="1"
            android:theme="@style/checkbox"
            android:button="@drawable/img_checkbox"/>
        <CheckBox
            android:id="@+id/cbdauhong"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:button="@drawable/img_checkbox"
            android:theme="@style/checkbox"
            android:text="Đau họng"
            android:layout_weight="1"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_1"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">
        <CheckBox
            android:id="@+id/cbkhotho"
            android:background="@color/black_trans"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Khó thở"
            android:layout_weight="1"
            android:theme="@style/checkbox"
            android:button="@drawable/img_checkbox"/>
        <CheckBox
            android:id="@+id/cbmetmoi"
            android:background="@color/black_trans"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:button="@drawable/img_checkbox"
            android:theme="@style/checkbox"
            android:text="Mệt mỏi"
            android:layout_weight="1"
            />
    </LinearLayout>
    <CheckBox
        android:id="@+id/cbkhoe"
        android:layout_marginTop="@dimen/dp_3"
        android:textSize="16sp"
        android:textColor="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:button="@drawable/img_checkbox"
        android:theme="@style/checkbox"
        android:text="Hôm nay tôi khoẻ"
       />
    <LinearLayout
        android:layout_marginTop="@dimen/dp_8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
   <TextView
       android:layout_marginTop="@dimen/dp_3"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Bạn có mắc bệnh nào dưới đây:"
       android:textStyle="bold"
       android:textColor="@color/colorBlack"
       android:textSize="16sp"
       />
        <CheckBox
            android:id="@+id/cbhuyetapcao"
            android:background="@color/black_trans"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Huyết áp cao"
            android:layout_weight="1"
            android:theme="@style/checkbox"
            android:button="@drawable/img_checkbox"/>
        <CheckBox
            android:id="@+id/cbtimmach"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Bệnh tim mạch"
            android:layout_weight="1"
            android:theme="@style/checkbox"
            android:button="@drawable/img_checkbox"/>
        <CheckBox
            android:id="@+id/cbphoimantinh"
            android:background="@color/black_trans"
            android:textSize="16sp"
            android:textColor="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Bệnh phổi mãn tính"
            android:layout_weight="1"
            android:theme="@style/checkbox"
            android:button="@drawable/img_checkbox"/>
    </LinearLayout>
    <Button
        android:id="@+id/btnsent"
        android:background="@drawable/custom_button_next"
        android:layout_width="@dimen/dp_256"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_gravity="center"
        android:text="Gửi thông tin" />

    <Button
        android:id="@+id/btnbackhome"
        android:background="@drawable/custom_button_next"
        android:layout_width="@dimen/dp_256"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_gravity="center"
        android:text="Xong" />

</LinearLayout>